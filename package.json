{
  "name": "codenames",
  "version": "1.0.0",
  "description": "Real-time multiplayer Codenames game",
  "private": true,
  "scripts": {
    "start": "./start.sh",
    "dev": "./start.sh",
    "play": "./start.sh",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm run dev -- --host",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "build": "cd client && npm run build",
    "setup": "./setup-network.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
